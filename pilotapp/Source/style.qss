QLabel {
    color: black;
    font: 24pt 'Inter';
}

QPushButton {
    border: 2px solid #e0e0e0;
    border-radius: 8px;
    padding: 1px 4px;
    min-width: 30px;
    min-height: 16px;
    outline: none;
}

QPushButton:hover{
    background-color: #90caf9;
    border-color: #59F;
    outline: none;
}

QPushButton:pressed
{
    border-width: 2px;      
    background-color: #59F;
    border-color: #e0e0e0;
    outline: none;
}

